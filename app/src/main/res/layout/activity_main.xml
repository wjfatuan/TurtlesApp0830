<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnDonatello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donatello"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnRaphael"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/btnRaphael"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Raphael"
        app:layout_constraintEnd_toStartOf="@id/btnMike"
        app:layout_constraintStart_toEndOf="@+id/btnDonatello"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnMike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mike"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnRaphael"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgCharacter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/donatello"
         />

</androidx.constraintlayout.widget.ConstraintLayout>